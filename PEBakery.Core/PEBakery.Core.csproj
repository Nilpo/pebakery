<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Library</OutputType>
    <UseWindowsForms>true</UseWindowsForms>
    <UseWPF>true</UseWPF>
  </PropertyGroup>
  <PropertyGroup>
    <RootNamespace>PEBakery.Core</RootNamespace>
    <AssemblyName>PEBakery.Core</AssemblyName>
  </PropertyGroup>
  <PropertyGroup>
    <PreserveCompilationContext>true</PreserveCompilationContext>
    <MvcRazorCompileOnPublish>false</MvcRazorCompileOnPublish>
    <MvcRazorExcludeRefAssembliesFromPublish>false</MvcRazorExcludeRefAssembliesFromPublish>
    <Authors>Team PEBakery</Authors>
    <Version>0.9.7.0</Version>
    <Company>Team PEBakery</Company>
    <Copyright>Copyright © 2016-2020</Copyright>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <NeutralLanguage>en-US</NeutralLanguage>
    <SignAssembly>false</SignAssembly>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <NoWarn>1701;1702;CA2235</NoWarn>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <NoWarn>1701;1702;CA2235</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\NativeLibraries\NativeLibraries.csproj" />
    <ProjectReference Include="..\Ookii.Dialogs.Wpf\Ookii.Dialogs.Wpf.csproj" />
    <ProjectReference Include="..\PEBakery.Helper\PEBakery.Helper.csproj" />
    <ProjectReference Include="..\PEBakery.Ini\PEBakery.Ini.csproj" />
    <ProjectReference Include="..\PEBakery.Tree\PEBakery.Tree.csproj" />
  </ItemGroup>
  <ItemGroup>
    <!-- Razor Templates -->
    <EmbeddedResource Include="Razor\_LogLayout.cshtml" />
    <EmbeddedResource Include="Razor\_BuildLogView.cshtml" />
    <EmbeddedResource Include="Razor\_SystemLogView.cshtml" />
    <EmbeddedResource Include="Razor\bootstrap.bundle.min.js" />
    <EmbeddedResource Include="Razor\bootstrap.min.css" />
    <EmbeddedResource Include="Razor\jquery.slim.min.js" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Joveler.Compression.XZ" Version="4.0.0" />
    <PackageReference Include="Joveler.Compression.ZLib" Version="4.0.0" />
    <PackageReference Include="Joveler.FileMagician" Version="2.0.0" />
    <PackageReference Include="MahApps.Metro.IconPacks.Material" Version="4.2.0" />
    <PackageReference Include="ManagedWimLib" Version="2.0.0" />
    <PackageReference Include="MessagePack" Version="2.1.115" />
